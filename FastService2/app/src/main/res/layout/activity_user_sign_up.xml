<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f15d35"
    tools:context=".UserSignUp">

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="181dp"
        android:layout_marginTop="593dp"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="18dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="303dp"
        android:layout_height="24dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="Sign up to see our electronic menu."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sc"
        android:text="---------------------------------   Personal Data   ---------------------------------"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="170dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="-----------   Verification   -----------"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/signup_Email2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="455dp"
        android:background="@drawable/btn_shape"
        android:ems="10"
        android:fontFamily="@font/arapey"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:soundEffectsEnabled="true"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textColorHighlight="?android:attr/textColorHighlight"
        android:textColorHint="#8BFFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/signup_phone2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="358dp"
        android:background="@drawable/btn_shape"
        android:ems="10"
        android:textStyle="bold"
        android:fontFamily="@font/arapey"
        android:hint="Phone Number"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textColorHighlight="?android:attr/textColorHighlight"
        android:textColorHint="#8BFFFFFF"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <RadioGroup
        android:id="@+id/WorkPosition1"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="191dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rdWaiter1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_shape"
            android:fontFamily="@font/arapey"
            android:text="Waiter"
            android:textColor="@color/white"
            android:textColorHighlight="?android:attr/textColorHighlight"
            android:textSize="20dp"
            app:buttonTint="@color/white" />

        <RadioButton
            android:id="@+id/rdUser1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_shape"
            android:checked="true"
            android:fontFamily="@font/arapey"
            android:text="User"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20dp"
            app:buttonTint="@color/white" />

    </RadioGroup>

    <EditText
        android:textStyle="bold"
        android:id="@+id/signup_fullName2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="214dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="404dp"
        android:background="@drawable/btn_shape"
        android:ems="10"
        android:fontFamily="@font/arapey"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textColorHint="#8BFFFFFF"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <EditText
        android:id="@+id/signup_Password2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="309dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="310dp"
        android:background="@drawable/btn_shape"
        android:ems="10"
        android:fontFamily="@font/arapey"
        android:hint="Password"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textColorHighlight="?android:attr/textColorHighlight"
        android:textColorHint="#8BFFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="359dp"
        android:layout_marginBottom="282dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="------------------   Work Position   ------------------"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signup_2"
        android:layout_width="166dp"
        android:layout_height="45dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="544dp"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/btn_sh"
        android:fontFamily="@font/alegreya_sc"
        android:text="Sign up "
        android:textColor="#F15D35"
        android:textSize="18sp"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="171dp"
        android:layout_height="97dp"
        android:layout_marginStart="123dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="551dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fast_service" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="189dp"
        android:layout_height="40dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="495dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="126dp"
        android:fontFamily="@font/arapey"
        android:text="I'm not a robot"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18dp"
        app:buttonTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox2"
        app:layout_constraintEnd_toEndOf="@+id/checkBox2"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="@+id/checkBox2"
        app:layout_constraintTop_toTopOf="@+id/checkBox2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/robot" />
</androidx.constraintlayout.widget.ConstraintLayout>